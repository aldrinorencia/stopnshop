doctype html
html(lang="en")

head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description" content="")
    meta(name="author" content="")
    title=title
    link(rel="stylesheet" 
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" 
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" 
        crossorigin="anonymous"
    )
    link(href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote.css" rel="stylesheet")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
    script(
        src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous")
    script(src="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js") 
    script(src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote.js")

body
    main(role="main" class="container")
        h1#movieTitle(class="mt-5") 
        p(class="lead") This is my activity for the <b>Node.js</b> and <b>Javascript</b>. 
        br
        div(class="panel panel-primary")
            div(class="panel-heading") Google with Image
            div(class="panel-body") 
                .row
                    each s in seasons
                        .col
                            h4=s
                            img(
                                style="width: 100%; padding:5px"
                                src="/img/google.png"
                            )
        div(class="panel panel-primary")
            div(class="panel-heading") Todo List
            div(class="panel-body") 
                if isSuccess
                    div(class="alert alert-success")
                        strong Success! 
                            span=message

                form(method="post"  id="myForm" class="form" action="/notes_add")
                    input(type="hidden" name="id" id="id" class="form-control")
                    div(class="col-md-6 form-group")
                        label(for="title") Title:
                        input(type="text" name="title" id="title" class="form-control" )
                    div(class="col-md-12 form-group")
                        label(for="description") Description:
                        textarea(type="text" name="description" id="description" )
                    
                    div(class="col-md-6 form-group")
                        button(type="submit" id="submit" class="btn btn-success") Submit
                
                div(class="col-md-12 form-group")
                    table(class="table table-bordered")
                        thead
                            tr
                                td Title
                                td Description
                                td Action
                        tbody
                            each n in note
                                tr
                                    td=n.title
                                    td!=n.description
                                    td
                                        button(type="button" class="btn btn-primary" onclick="getDetails("+n.id+")") Edit 
                                        span 
                                        button(type="button" class="btn btn-danger" onclick="deleteTask("+n.id+")") Delete
    script(src='/js/main.js')
        